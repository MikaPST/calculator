<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:background="#e0e0e0"
    tools:context=".MainActivity">


    <Button
        style="@style/boutonResult"
        android:id="@+id/buttonResult"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:onClick="result"
        android:text="="
        />

    <TextView
        style="@style/screen"
        android:id="@+id/tvScreen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:inputType="text"
        android:padding="15dp"
        />

    <RadioGroup
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:onClick="convertisseurDevise"
            android:id="@+id/rbBTC"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="B" />

        <RadioButton
            android:onClick="convertisseurDevise"
            android:id="@+id/rbUSD"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="$" />

        <RadioButton
            android:onClick="convertisseurDevise"
            android:id="@+id/rbEUR"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:checked="true"
            android:text="€" />

        <RadioButton
            android:onClick="convertisseurDevise"
            android:id="@+id/rbLIV"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="£" />

    </RadioGroup>

    <RadioButton
        android:id="@+id/radioDeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:text="Deg" />

    <RadioButton
        android:id="@+id/radioRad"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"

        android:text="Rad" />

    <RadioButton
        android:id="@+id/radioGrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:text="Grd" />

    <Button
        style="@style/boutonDel"
        android:id="@+id/buttonDel"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginLeft="10dp"
        android:onClick="delete"
        android:text="EFFACER"
        />

    <Button
        style="@style/boutonOpe"
        android:id="@+id/buttonDiv"
        android:layout_row="3"
        android:onClick="touche"
        android:layout_column="3"
        android:layout_marginRight="10dp"
        android:text="/"
        />

    <Button
        style="@style/boutonNum"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:background="#494949"
        android:onClick="touche"
        android:text="7"
        />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button8"
        android:onClick="touche"
        android:layout_row="4"
        android:layout_column="1"
        android:text="8" />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button9"
        android:layout_row="4"
        android:onClick="touche"
        android:layout_column="2"
        android:text="9" />

    <Button
        style="@style/boutonOpe"
        android:id="@+id/buttonMulti"
        android:layout_row="4"
        android:layout_column="3"
        android:onClick="touche"
        android:text="*"
        />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button4"
        android:onClick="touche"
        android:layout_row="5"
        android:layout_marginLeft="10dp"
        android:layout_column="0"
        android:text="4" />

    <Button
        style="@style/boutonNum"
        android:background="#494949"
        android:id="@+id/button5"
        android:layout_row="5"
        android:onClick="touche"
        android:layout_column="1"
        android:text="5" />

    <Button
        style="@style/boutonOpe"
        android:id="@+id/buttonSous"
        android:layout_row="5"
        android:layout_column="3"
        android:onClick="touche"
        android:layout_marginRight="10dp"
        android:text="-"
        />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button1"
        android:layout_row="6"
        android:layout_column="0"
        android:onClick="touche"
        android:layout_marginLeft="10dp"
        android:text="1" />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button2"
        android:layout_row="6"
        android:onClick="touche"
        android:layout_column="1"
        android:text="2" />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button3"
        android:layout_row="6"
        android:onClick="touche"
        android:layout_column="2"
        android:text="3" />

    <Button
        style="@style/boutonOpe"
        android:id="@+id/buttonPlus"
        android:layout_row="6"
        android:layout_column="3"
        android:layout_marginRight="10dp"
        android:onClick="touche"
        android:text="+"
        />

    <Button
        style="@style/boutonNum"
        android:id="@+id/buttonPoint"
        android:layout_row="7"
        android:layout_column="0"
        android:onClick="touche"
        android:layout_marginLeft="10dp"
        android:text="." />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button0"
        android:layout_row="7"
        android:onClick="touche"
        android:layout_column="1"
        android:text="0" />

    <Button
        style="@style/boutonNum"
        android:id="@+id/button6"
        android:layout_row="5"
        android:onClick="touche"
        android:layout_column="2"
        android:text="6" />


</GridLayout>